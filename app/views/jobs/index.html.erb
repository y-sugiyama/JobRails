<div class="users index">

    <div class="container">

        <!-- content -->
        <div class="row"> 
            <%= render 'menu' %>

            <div class="col-md-9">
                <h2> 求人一覧</h2>

                <p><%= link_to '新規追加', new_job_path, :method=>:get , class: "btn btn-default" %></p>

                  <table class="table table-striped">
                      <tr>
                          <th>ID</th>
                          <th>タイトル</th>
                          <th>アクション</th>
                      </tr>

                      <%  @jobs.each do |job| %>


                        <tr>
                            <td><%= job.id  %></td>
                            <td><%= link_to job.title, job_path(job), :method=> :get  %></td>


                            <td> 
                                <%= link_to '編集',edit_job_path(job), :method=> :get ,class: "btn btn-default" %>
                                  <%= link_to '削除',job_path(job), :method=> :delete, data:{confirm: '本当に削除してよろしいですか?'} , class: "btn btn-danger" %>

                                </td>
                            </tr>

                          <% end %>


                      </table>
                  </div>

              </div>
          </div>
      </div>



<div class="row" id="contact">
    <div class="col-md-6 col-md-offset-3"> 
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading" id="login"><h4><%='エントリー画面'%></h4></div>
            <div class="panel-body">

                <%= simple_form_for(@entry, url: entries_path) do |f| %>

                  <%= f.input :name , label: 'お名前',error: "お名前を入力してください" %>
                  <%= f.input  :email , label: 'メールアドレス' ,error: 'メールアドレスを入力してください' %>
                  <%= f.input :age , label: '年齢' ,error: 'ご年齢を入力してください' %>
                  <%= f.input :tel , label: '電話番号' ,error: '電話番号を入力してください' %>
                  <%= f.input :address , label: '住所' ,error: 'ご住所を入力してください' %>
                  <%= f.input :subject , label: '件名' ,error: 'タイトルを入力してください' %>
                  <%= f.input :body, label: 'お問い合わせ内容' ,error: 'お問い合わせ内容を入力してください' %>

                  <%= f.button :submit,  "送信", class: "btn btn-primary" %>
                  <% end %>

                  <%= link_to 'Back', entries_path %>

              </div>
          </div>
      </div>
  </div>



<div class="row" id="contact">
    <div class="col-md-6 col-md-offset-3"> 
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading" id="login"><h4><%='確認画面'%></h4></div>
            <div class="panel-body">

                  <table class="table">
                      <tr>
                          <th> お名前</th>
                          <td>
                                <%= @entry.name %>
                            </td>
                        </tr>
                        <tr>
                            <th>メールアドレス</th>
                            <td>
                                  <%= @entry.email %>
                              </td>
                          </tr>
                          <tr>
                          <th>年齢 </th>
                          <td>
                                <%= @entry.age %>
                            </td>
                        </tr>
                        <tr>
                          <th>電話番号 </th>
                          <td>
                                <%= @entry.tel %>
                            </td>
                        </tr>
                        <tr>
                          <th>住所 </th>
                          <td>
                                <%= @entry.address %>
                            </td>
                        </tr>
                        <tr>
                          <th>件名 </th>
                          <td>
                                <%= @entry.subject %>
                            </td>
                        </tr>
                          <tr>
                              <th> 内容</th>
                              <td>
                                    <%= simple_format(@entry.body) %>
                                </td>
                            </tr>
                        </table>

<%= simple_form_for(@entry, url: entries_thanks_path) do |f| %>
                
                        <%= f.button :submit,  "送信", class: "btn btn-primary" %>
                        <% end %>
                <%= link_to 'Back', new_entry_path, :method => :get %>



                    </div>
                </div>
            </div>
        </div>